@model IEnumerable<BertoniSolutionTest.Models.PhotoModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.albumId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.url)
        </th>
        <th>
            Comments
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.albumId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            <img src="@item.url" width="70px" height="70px" />
        </td>
        <td>
            <a href="javascript:void(0);" class="anchorDetail" data-id="@item.Id">View Comments</a>
        </td>
    </tr>
}

</table>
